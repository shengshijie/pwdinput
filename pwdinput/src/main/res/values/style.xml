<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeBottomDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="text_dark_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_gray_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textGray</item>
    </style>

    <style name="text_dark_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="text_red_16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textRed</item>
    </style>

    <style name="AnimBottomPushWindow">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>